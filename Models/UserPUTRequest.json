{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"username": {
			"type": "string",
			"minLength": 1,
			"maxLength": 40
		},
		"displayname": {
			"type": "string",
			"minLength": 1,
			"maxLength": 40
		},
		"email": {
			"type": "string",
			"format": "email"
		},
		"subscribe": {
			"type": "boolean"
		}
	},
	"additionalProperties": false,
	"required": [
		"username",
		"displayname",
		"email",
		"subscribe"
	]
}
